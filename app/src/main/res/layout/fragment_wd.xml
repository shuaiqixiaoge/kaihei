<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaohui.android.fragment.WDFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    >

                    <ImageView
                        android:id="@+id/me_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/my_translucence"
                        android:fitsSystemWindows="true"/>

                    <ImageView
                        android:id="@+id/iv_message"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/status_bar_height"
                        android:scaleType="center"
                        android:src="@drawable/wodexiaoxi"/>

                    <ImageView
                        android:id="@+id/iv_ceshi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp85"/>

                    <ImageView
                        android:id="@+id/iv_ceshi2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp85"/>

                    <ImageView
                        android:id="@+id/iv_ceshi3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp85"/>

                    <ImageView
                        android:id="@+id/iv_ceshi4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp85"/>

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="@dimen/dp80"
                        android:layout_height="@dimen/dp80"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp50"
                        android:src="@drawable/my_touxiang_yuan"/>

                    <ImageView
                        android:id="@+id/iv_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp123"
                        android:src="@drawable/vip0"/>

                    <TextView
                        android:id="@+id/tv_user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/avatar"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp14"
                        android:text="18811458677"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp18"/>

                    <ImageView
                        android:id="@+id/iv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_user_phone"
                        android:layout_below="@id/avatar"
                        android:layout_marginLeft="@dimen/dp8"
                        android:layout_marginTop="@dimen/dp14"
                        android:layout_toRightOf="@id/tv_user_phone"
                        android:src="@drawable/my_nv"/>

                    <LinearLayout
                        android:id="@+id/ll_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp20"
                        android:layout_below="@id/tv_user_phone"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp7"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/my_v"/>

                        <TextView
                            android:id="@+id/tv_grade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp6"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp11"/>

                        <ProgressBar
                            android:id="@+id/my_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="@dimen/dp150"
                            android:layout_height="@dimen/dp12"
                            android:max="100"
                            android:progress="11"
                            android:progressDrawable="@drawable/progressbar_color"/>

                        <TextView
                            android:id="@+id/tv_dengji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp8"
                            android:text="0%"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp13"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_progress"
                        android:layout_marginTop="@dimen/dp13"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rl_xh_coupons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/iviv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/my_youhuijuan"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_toRightOf="@id/iviv1"
                                android:text="优惠券"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp16"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_xh_bankcard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/iviv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/my_yinhangka"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_toRightOf="@id/iviv2"
                                android:layout_weight="1"
                                android:drawablePadding="@dimen/dp10"
                                android:text="银行卡"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp16"/>
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>
            </android.support.design.widget.AppBarLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/my_bg_color"/>

            <RelativeLayout
                android:id="@+id/rl_wd_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@drawable/selectable_background">

                <ImageView
                    android:id="@+id/iv_xh_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp15"
                    android:src="@drawable/wd_yunbi"/>

                <TextView
                    style="@style/wd_tv_15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp7"
                    android:layout_toRightOf="@id/iv_xh_0"
                    android:text="@string/my_account"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp15"
                    android:src="@drawable/my_jiantou_new"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_marginLeft="@dimen/dp42"
                android:background="#e1e1e1"/>

            <RelativeLayout
                android:id="@+id/rl_wd_xiaotao"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selectable_background">

                <ImageView
                    android:id="@+id/iv_xh_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp15"
                    android:src="@drawable/my_wdxp"/>

                <TextView
                    style="@style/wd_tv_15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_toRightOf="@id/iv_xh_1"
                    android:text="@string/my_xiaotao"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp15"
                    android:src="@drawable/my_jiantou_new"/>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/my_bg_color"/>


            <RelativeLayout
                android:id="@+id/rl_wd_issuer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@drawable/selectable_background">

                <ImageView
                    android:id="@+id/iv_xh_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp15"
                    android:src="@drawable/my_faxingren"/>

                <TextView
                    style="@style/wd_tv_15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_toRightOf="@id/iv_xh_2"
                    android:text="@string/my_faxingren"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp15"
                    android:src="@drawable/my_jiantou_new"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_marginLeft="@dimen/dp42"
                android:background="@color/my_line_color"/>

            <RelativeLayout
                android:id="@+id/rl_wd_sign"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@drawable/selectable_background">

                <ImageView
                    android:id="@+id/iv_xh_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp15"
                    android:src="@drawable/my_qianyue"/>

                <TextView
                    style="@style/wd_tv_15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_toRightOf="@id/iv_xh_6"
                    android:text="@string/my_signService"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp15"
                    android:src="@drawable/my_jiantou_new"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/my_bg_color"/>


            <RelativeLayout
                android:id="@+id/rl_wd_service"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@drawable/selectable_background">

                <ImageView
                    android:id="@+id/iv_xh_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp15"
                    android:src="@drawable/my_wddf"/>

                <TextView
                    style="@style/wd_tv_15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_toRightOf="@id/iv_xh_5"
                    android:text="@string/my_keService"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp15"
                    android:src="@drawable/my_jiantou_new"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_marginLeft="@dimen/dp42"
                android:background="@color/my_line_color"/>

            <RelativeLayout
                android:id="@+id/rl_wd_question"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@drawable/selectable_background">

                <ImageView
                    android:id="@+id/iv_xh_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp15"
                    android:src="@drawable/my_cjwt"/>

                <TextView
                    style="@style/wd_tv_15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_toRightOf="@id/iv_xh_3"
                    android:text="@string/my_question"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp15"
                    android:src="@drawable/my_jiantou_new"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_marginLeft="@dimen/dp42"
                android:background="@color/my_line_color"/>


            <RelativeLayout
                android:id="@+id/rl_wd_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@drawable/selectable_background">

                <ImageView
                    android:id="@+id/iv_xh_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp15"
                    android:src="@drawable/my_szzx"/>

                <TextView
                    style="@style/wd_tv_15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_toRightOf="@id/iv_xh_4"
                    android:text="@string/my_setting"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp15"
                    android:src="@drawable/my_jiantou_new"/>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/my_bg_color"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout
   >
