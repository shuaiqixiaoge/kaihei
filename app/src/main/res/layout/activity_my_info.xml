<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.xiaohui.android.activity.wd.MyInfoActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_title_white">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/info_title"
                android:textColor="@color/black"
                android:textSize="@dimen/sp18" />

            <ImageView
                android:id="@+id/onClick_BACK"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:background="@drawable/selectable_title_white"
                android:scaleType="center"
                android:src="@drawable/back_black" />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_gray_bg"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/onClick_Head"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:layout_marginTop="@dimen/dp0.5"
                android:background="@drawable/selectable_background"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10">


                <TextView
                    style="@style/wd_tv_black_16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/info_head" />

                <TextView
                    style="@style/wd_tv_gray_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableRight="@drawable/fx_into"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/info_head"
                    android:layout_width="@dimen/dp55"
                    android:layout_height="@dimen/dp55"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp15"
                    android:scaleType="fitXY" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/onClick_Nick"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_marginTop="@dimen/dp0.5"
                android:background="@drawable/selectable_background"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10">


                <TextView
                    style="@style/wd_tv_black_16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/info_nick" />

                <TextView
                    android:id="@+id/info_nick"
                    style="@style/wd_tv_gray_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableRight="@drawable/fx_into"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/onClick_School"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_marginTop="@dimen/dp0.5"
                android:background="@drawable/selectable_background"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10">


                <TextView
                    style="@style/wd_tv_black_16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/info_school" />

                <TextView
                    android:id="@+id/info_school"
                    style="@style/wd_tv_gray_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableRight="@drawable/fx_into"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/onClick_Birthday"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_marginTop="@dimen/dp0.5"
                android:background="@drawable/selectable_background"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10">


                <TextView
                    style="@style/wd_tv_black_16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/info_birthday" />

                <TextView
                    android:id="@+id/info_birthday"
                    style="@style/wd_tv_gray_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableRight="@drawable/fx_into"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/onClick_Sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_marginTop="@dimen/dp0.5"
                android:background="@drawable/selectable_background"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10">


                <TextView
                    style="@style/wd_tv_black_16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/info_sex" />

                <TextView
                    android:id="@+id/info_sex"
                    style="@style/wd_tv_gray_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableRight="@drawable/fx_into"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/onClick_Identify"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_marginTop="@dimen/dp0.5"
                android:background="@drawable/selectable_background"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10">


                <TextView
                    style="@style/wd_tv_black_16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/info_identify" />

                <TextView
                    android:id="@+id/info_identify"
                    style="@style/wd_tv_gray_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableRight="@drawable/fx_into"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/testImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
