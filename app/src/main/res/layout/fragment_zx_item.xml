<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="@dimen/dp2"
    android:orientation="vertical"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/selectable_background">

        <ImageView
            android:id="@+id/zx_item_img"
            android:layout_width="100dp"
            android:layout_height="95dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:background="#00ff00"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/zx_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/zx_item_img"
            android:text="嫖娼东弄啥嘞"
            android:textColor="#0f0e0e"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/zx_item_support"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/zx_item_supportNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="98dp"
                android:text="111"
                android:textColor="#221714"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/zx_item_support_btn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginTop="96dp"
            android:layout_toLeftOf="@+id/zx_item_support">

            <ImageView
                android:id="@+id/zx_item_support_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>